@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm border border-dark p-3">
        <div>
            <h3> Enter Name</h3>
            <input class="form-control" type="text" id="txtName" autocomplete="off" />
        </div>
        <div>
            <h3> Enter Mobile</h3>
            <input class="form-control" type="text" id="txtMobile"autocomplete="off" />
        </div>
        <div>
            <h3> Enter Address</h3>
            <input class="form-control" type="text" id="txtAddress" autocomplete="off"/>
        </div>
        <div>
            <h3> Enter City</h3>
            <input class="form-control" type="text" id="txtCity" autocomplete="off"/>
        </div>

        <div class="mt-4 text-center">
            <button class="btn btn-success" id="btnSave">Save</button>
            <a class="btn btn-secondary" asp-action="AllPerson" >View list</a>
        </div>


    </div>
    <div class="col-sm-3"></div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $("#btnSave").on("click", function () {
        var SaveDrawAccidentURL = '@Url.Action("SavePerson", "Home")';
        $.ajax({
            cache: false,
            async: false,
            type: "POST",
            url: SaveDrawAccidentURL,
            data: {
                Id: 0,
                Name: $('#txtName').val(),
                Mobile: $('#txtMobile').val(),
                Address: $('#txtAddress').val(),
                City: $('#txtCity').val()
            },
            dataType: "json",
            success: function (data) {
                alert(data);
            },
        });
    });

</script>
